<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="jumbotron" id="main-jumbotron">
       <h1>Finally, peace of mind</h1>
       <p>Quickly enter tasks</p>
       <p>Get reminded when to do them</p>
       <p>Get on with life</p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-1 col-md-4" class="form-group">

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-success" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

