<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Task #<%= @task.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @task.name %></dd>

              <dt>Description</dt>
              <dd><%= @task.description %></dd>

              <dt>Time due</dt>
              <dd><%= @task.time_due %></dd>

              <dt>Reminder at</dt>
              <dd><%= @task.reminder_at %></dd>

              <dt>User</dt>
              <dd><%= @task.user.username %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to icon('chevron-left'), tasks_path, class: "btn btn-primary" %>

              <%= link_to icon('edit'), edit_task_path(@task), class: "btn btn-warning" %>

              <%= link_to icon('trash-o'), @task, method: :delete, data: { confirm: "Do you really want to delete this task?" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
