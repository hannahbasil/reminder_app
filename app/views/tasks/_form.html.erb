<%= form_for task, :html => {:class => "form-horizontal center"} do |f| %>
<div class="form-group">
  <%= f.label :name, class: "col-md-3" %>
  <div class="col-md-8">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label "Notes", class: "col-md-3" %>
  <div class="col-md-8">
    <%= f.text_field :description, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label "Time Due", class: "col-md-3" %>
  <div class="col-md-8">
    <%= f.datetime_select :time_due, ampm: true, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label "Reminder At", class: "col-md-3" %>
  <div class="col-md-8">
    <%= f.datetime_select :reminder_at, ampm: true, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="col-md-8">
    <%= f.hidden_field :user_id, value: "#{current_user.id}", class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <div class="col-md-8 col-md-offset-3">
    <%= f.submit class: "form-control btn btn-primary"%>
  </div>
</div>
<% end %>
