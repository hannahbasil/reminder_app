<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 isotope-item">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= task.name.titleize %></h3>
      </div>
      <div class="panel-body">
        <dl>
          <dt>Notes</dt>
          <dd><%= task.description %></dd>

          <dt>Time due</dt>
          <dd><%= task.time_due.strftime("%b %e, %l:%M %p") %></dd>

          <dt>Reminder at</dt>
          <dd><%= task.reminder_at.strftime("%b %e, %l:%M %p") %></dd>

        </dl>
        <div class="btn-group btn-group-justified">
          <%= link_to icon('edit'), edit_task_url(task), class: "btn btn-warning" %>

          <%= link_to icon('check'), task, method: :delete, data: { confirm: "Congrats! Confirm you are done with this task." }, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
